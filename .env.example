# AI Agent Platform - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Application ports
PORT=3001
FRONTEND_PORT=3000

# Application URL (used for generating links in emails)
APP_URL=http://localhost:3000

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection string
# For local development:
DATABASE_URL=postgresql://aiagent:aiagent_secret@localhost:5432/ai_agent_platform
# For Supabase:
# DATABASE_URL=postgresql://postgres.[project-id]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
# Direct URL (for migrations):
# DIRECT_DATABASE_URL=postgresql://postgres.[project-id]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT secret for signing tokens (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# File URL secret for signed document URLs
FILE_URL_SECRET=your-file-url-secret-key

# =============================================================================
# AI SERVICES
# =============================================================================

# OpenRouter API key (for multiple AI models)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-xxxxx

# Google Gemini API key (for embeddings and document analysis)
# Get your key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# CRM INTEGRATION (KOMMO)
# =============================================================================

# Kommo OAuth credentials
# Get these from: https://www.kommo.com/developers/
KOMMO_CLIENT_ID=your-kommo-client-id
KOMMO_CLIENT_SECRET=your-kommo-client-secret
KOMMO_REDIRECT_URI=http://localhost:3001/api/kommo/callback

# Kommo webhook secret (optional, for signature verification)
KOMMO_WEBHOOK_SECRET=

# Skip webhook verification in development (set to 'true' only for local testing)
SKIP_WEBHOOK_VERIFICATION=false
SKIP_WEBHOOK_IP_CHECK=false

# =============================================================================
# GOOGLE SERVICES
# =============================================================================

# Google OAuth credentials (for Calendar integration)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/google/callback

# =============================================================================
# EMAIL (SMTP)
# =============================================================================

# SMTP server settings (for sending documents via email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="AI Agent Platform" <your-email@gmail.com>

# =============================================================================
# REDIS (OPTIONAL - for queue processing)
# =============================================================================

# Local Redis
REDIS_URL=redis://localhost:6379

# Upstash Redis (serverless)
# UPSTASH_REDIS_URL=redis://default:xxxxx@xxx.upstash.io:6379

# =============================================================================
# SUPABASE (OPTIONAL - for cloud file storage)
# =============================================================================

SUPABASE_URL=
SUPABASE_ANON_KEY=

# =============================================================================
# CORS & SECURITY
# =============================================================================

# Allowed origins for CORS (comma-separated for multiple)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# =============================================================================
# LOGGING
# =============================================================================

# Log level (error, warn, info, http, debug)
LOG_LEVEL=debug

# Enable file logging
LOG_TO_FILE=false

# Log directory
LOG_DIR=./logs

# =============================================================================
# FRONTEND ENVIRONMENT (VITE)
# =============================================================================

# API URL for frontend
VITE_API_URL=http://localhost:3001

# Application name
VITE_APP_NAME=AI Agent Platform
